{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "../src",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "src": ["."]
    }
  },
  "include": ["."],
  "exclude": ["**/*.test.*", "**/__mocks__/*", "**/__tests__/*"]
}